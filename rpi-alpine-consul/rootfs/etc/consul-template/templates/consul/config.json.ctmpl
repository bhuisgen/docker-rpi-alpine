{{- $datacenter := env "CONSUL_DATACENTER" -}}
{
    {{if $datacenter}}"datacenter": "{{$datacenter}}",{{end}}
    "data_dir": "/var/lib/consul",
    "log_level": "INFO",
    "disable_anonymous_signature": true,
    "disable_update_check": true,
    "disable_remote_exec": true,
    "dns_config": {
        "max_stale": "1s"
    }
}
